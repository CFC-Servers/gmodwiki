{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021", "WebWorker"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": [
      "@cloudflare/workers-types/2023-07-01"
    ],
    "baseUrl": ".",
    "paths": {
        "@layouts/*": ["src/layouts/*"]
    }
  },
  "ts-node": {
    "transpileOnly": true
  }
}
